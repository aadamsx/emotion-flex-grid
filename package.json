{
  "name": "emotion-flex-grid",
  "version": "1.1.0",
  "description": "A simple, responsive flexbox grid. Made with Emotion.",
  "keywords": [
    "emotion",
    "flexbox",
    "grid",
    "react",
    "styled",
    "css"
  ],
  "homepage": "https://rann91.github.io/emotion-flex-grid",
  "bugs": {
    "url": "https://github.com/rann91/emotion-flex-grid/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rann91/emotion-flex-grid.git"
  },
  "license": "ISC",
  "author": "Ranjit Singh",
  "files": [
    "build/lib"
  ],
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "scripts": {
    "start": "webpack-dev-server --config webpack/dev.js --progress",
    "build:app": "webpack --config webpack/app.js --progress",
    "build:lib": "webpack --config webpack/lib.js --progress",
    "build": "npm run build:app && npm run build:lib",
    "prepublishOnly": "npm run test",
    "test": "tsc -p tsconfig.json --noEmit && tslint -p tsconfig.json --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "npm run test"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.4.4",
    "@emotion/core": "^10.0.9",
    "@emotion/styled": "^10.0.9",
    "@types/facepaint": "^1.2.0",
    "@types/node": "^11.13.9",
    "@types/react": "^16.8.15",
    "@types/react-dom": "^16.8.4",
    "@types/webpack-env": "^1.13.9",
    "clean-webpack-plugin": "^2.0.1",
    "copy-webpack-plugin": "^5.0.3",
    "emotion-ts-plugin": "^0.3.0",
    "facepaint": "^1.2.1",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^5.4.5",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "@emotion/styled": "^10.0.9"
  }
